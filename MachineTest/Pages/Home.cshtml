
@page "/Home"
@model MachineTest.Pages.HomeModel
<span style="font-family: verdana, geneva, sans-serif">
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>Course Management System</title>
        <style>
            body {
                background-image: url('images/back-school.jpg');
                background-size: cover;
                background-attachment: fixed;
                font-family: 'Times New Roman', Times, serif;
            }
        </style>
   </head>
    <body>
        <div class="container-fluid">
            <div class="row pt-2 pb-2">
                
                <div class="col-md-1">
                    <button class="btn btn-primary btn-sm"
                            data-bs-toggle="offcanvas"
                            href="#offcanvasExample"
                            role="button"
                            aria-controls="offcanvasExample">
                        Menu
                    </button>
                </div>
                <div class="col-md-6">
                    <h2 style="
                text-align: center;
                font-family: monospace;
                font-weight: 800;
                color: brown;
              ">
                       Course Management System
                    </h2>
                </div>
            </div>
        </div>
        <section>
            <div class="container-fluid">
                <div class="row mt-4">
                    <div class="col-md-6">
                        <div class="card p-5">
                           <form method="post">
                               <label class="form-label">EmployeeName</label>
                               <input type="text" class="form-control" placeholder="Enter EmployeeName" asp-for="emp.Name" required  />
                                <span asp-validation-for="emp.Name"></span> 
                                <label class="form-label">Position</label>
                                <input type="text" class="form-control" placeholder="Enter Position" asp-for="emp.Position" required />
                                <span asp-validation-for="emp.Position"></span>
                                <label class="form-label">Department</label>
                                <input type="text" class="form-control" placeholder="Enter Department" asp-for="emp.Department" required />
                                <span asp-validation-for="emp.Department"></span><br />
                                <input type="submit" class="btn btn-primary" />
                           </form>
                        </div>
                    </div>
                    <div class="col-md-6">
                        @* <div class="card p-5">
                           
                        </div> *@
                    </div>
                    <div class="row">
                        @if(TempData["Message"]!=null)
                        {
                            <b>@TempData["Message"]</b>
                        }
                    </div>
                   <div class="col-md-7 mt-2">
                        <div class="card p-2">
                            <div class="table-responsive">

                           <table class="table table-bordered  table-striped ">
                               <thead>
                                   <th>ID</th>
                                <th>Name</th>
                                <th>Position</th>
                                <th>Department</th>
                                <th></th>
                               </thead>
                               <tbody>
                                    @if (Model.Employees != null)
                                    {
                                        @foreach(var emp in Model.Employees)
                                        {
                                            <tr>
                                                <td>@emp.Id</td>
                                                <td>@emp.Name</td>
                                                <td>@emp.Position</td>
                                                <td>@emp.Department</td>
                                                <td><a href="/EditEmp/Id={@emp.Id}">Detail</a> </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <span><b>No Records</b></span>
                                    }

                                   
                               </tbody>
                           </table>
                           </div>
                        </div>
                    </div> 
                </div>
            </div>
        </section>
        <div class="offcanvas offcanvas-start"
             tabindex="-1"
             id="offcanvasExample"
             aria-labelledby="offcanvasExampleLabel">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="offcanvasExampleLabel">Menu</h5>
                <button type="button"
                        class="btn-close text-reset"
                        data-bs-dismiss="offcanvas"
                        aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><a href="/Home">Employee</a></li>
                        <li class="list-group-item"><a href="/Course">Courses</a></li>
                        <li class="list-group-item"><a href="/Attendence">Attendence</a></li>
                        <li class="list-group-item"><a href="/Report">Report</a></li>
                    </ul>
                    
                    
                   </div>               
            </div>
        </div>
        
    </body>
</html>
</span>
