@page
@model MachineTest.Pages.ReportModel

<span style="font-family: verdana, geneva, sans-serif">
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>Course Management System</title>
        <style>
            body {
                background-image: url('images/back-school.jpg');
                background-size: cover;
                background-attachment: fixed;
                font-family: 'Times New Roman', Times, serif;
            }
        </style>
    </head>
    <body>
        <div class="container-fluid">
            <div class="row pt-2 pb-2">
                
                <div class="col-md-1">
                    <button class="btn btn-primary btn-sm"
                            data-bs-toggle="offcanvas"
                            href="#offcanvasExample"
                            role="button"
                            aria-controls="offcanvasExample">
                        Menu
                    </button>
                </div>
                <div class="col-md-6">
                    <h2 style="
                text-align: center;
                font-family: monospace;
                font-weight: 800;
                color: brown;
              ">
                        Course Management System
                    </h2>
                </div>
            </div>
        </div>
        <section>
            <div class="container-fluid">
                <div class="row mt-4">
                    <div class="col-md-6">
                        <div class="card p-5">
                            <form method="post">

                           
                            <select asp-for="SelectedDepartment" class="form-control">
                                <option value="">Select Department</option>
                                @foreach (var department in Model.Departments)
                                {
                                    <option value="@department">@department</option>
                                }
                            </select><br />
                            <input type="submit" class="btn btn-primary" />
                            </form>
                        </div>
                    </div>
                    <div class="col-md-6">
                        @* <div class="card p-5">

                        </div> *@
                    </div>
                    <div class="row">
                        @if (TempData["Message"] != null)
                        {
                            <b>@TempData["Message"]</b>
                        }
                    </div>
                    <div class="col-md-7 mt-2">
                        <div class="card p-2">
                            <div class="table-responsive">
                            <table class="table table-bordered  table-striped ">
                                <thead>
                                <th>ID</th>
                                <th>Name</th>
                                
                                
                                </thead>
                                <tbody>
                                    @if (Model.Employees != null)
                                    {
                                        @foreach (var emp in Model.Employees)
                                        {
                                            <tr>
                                                <td>@emp.Id</td>
                                                <td>@emp.Name</td>
                                               
                                                
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <span><b>No Records</b></span>
                                    }

                                   
                                    




                                </tbody>
                            </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div class="offcanvas offcanvas-start"
             tabindex="-1"
             id="offcanvasExample"
             aria-labelledby="offcanvasExampleLabel">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="offcanvasExampleLabel">Menu</h5>
                <button type="button"
                        class="btn-close text-reset"
                        data-bs-dismiss="offcanvas"
                        aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><a href="/Home">Employee</a></li>
                        <li class="list-group-item"><a href="/Course">Courses</a></li>
                        <li class="list-group-item"><a href="/Attendence">Attendence</a></li>
                        <li class="list-group-item"><a href="/Report">Report</a></li>
                    </ul>


                </div>
            </div>
        </div>

    </body>
</html>
</span>
